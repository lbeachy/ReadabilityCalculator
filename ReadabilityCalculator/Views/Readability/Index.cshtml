@model ReadabilityCalculator.Models.Readability.ReadabilityInput_vm

@{
    ViewData["Title"] = "Index";
}

<h2>Readability Calculator</h2>


<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Index">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="InputText" class="control-label"></label>
                <textarea asp-for="InputText" class="form-control" rows="10" cols="10"></textarea>
                <span asp-validation-for="InputText" class="text-danger"></span>
            </div>
            @using (Html.BeginForm("ReadabilityResults", "Readability", FormMethod.Post))
            {
                <input type="submit" value="Flesch Reading Ease" class="btn btn-primary" name="btnSubmit" />
                <input type="submit" value="Flesch Kincaid Grade Level" class="btn btn-primary" name="btnSubmit" />
                <input type="submit" value="Automated Readability Index" class="btn btn-primary" name="btnSubmit" />
                <input type="submit" value="Coleman-Liau Index" class="btn btn-primary" name="btnSubmit" />
            }
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
